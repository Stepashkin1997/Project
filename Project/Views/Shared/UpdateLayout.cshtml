<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/Style.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Script.js"></script>
    <title>Market</title>
</head>
<body>
    <a href="/Home/Index" style="position:absolute; top:5px; right:5px;">
        <img src="~/Content/img/home.png" title="На начальную страницу" />
    </a>
    <div id="wrapper">
        <form method="get" action="/Update/Index/" id="chtbl" style="text-align:center; margin: 0 auto; border:none;">
            <h1>
                Table selection
            </h1>
            <select name="update" id="update">
                @{
                    foreach (var item in ViewBag.List)
                    {
                        <option value="@item">@item</option>
                    }
                }
            </select>
            <input type="submit" />
        </form>
        @RenderBody()
    </div>
</body>
</html>
